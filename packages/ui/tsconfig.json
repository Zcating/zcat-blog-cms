{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "composite": true,
    "paths": {
      "@zcat/ui": [
        "./src/index.ts"
      ],
      "@zcat/ui/*": [
        "./src/*"
      ],
      "@zcat/ui/shadcn": [
        "./src/shadcn/index.ts"
      ],
      "@zcat/ui/shadcn/*": [
        "./src/shadcn/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "tsup.config.ts",
    "e2e/**/*",
    "playwright.config.ts"
  ]
}