{
  "name": "zcat-blog-cms",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "typecheck": "pnpm -r run typecheck",
    "lint": "pnpm -r run lint",
    "dev": "pnpm -r run dev",
    "dev:ui": "pnpm -r --filter=ui run dev",
    "dev:doc": "pnpm --filter=doc run dev",
    "dev:backend": "pnpm --filter=backend run dev",
    "dev:frontend": "pnpm --filter=frontend run dev",
    "dev:blog": "pnpm --filter=blog run dev",
    "build": "pnpm -r run build",
    "build:backend": "pnpm --filter=backend run build",
    "build:frontend": "pnpm --filter=frontend run build",
    "build:blog": "pnpm --filter=blog run build",
    "docker:build": "docker compose up -d --build",
    "docker:build:db": "docker compose up -d --build cms_pg",
    "docker:build:backend": "docker compose up -d --build backend",
    "docker:build:frontend": "docker compose up -d --build frontend",
    "docker:build:blog": "docker compose up -d --build blog"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.5",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-check-file": "^3.3.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "katex": "^0.16.23",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=22.4.0",
    "pnpm": ">=10.5.1",
    "npm": ">=10.9.2"
  },
  "lint-staged": {
    "apps/backend/**/*.{js,ts}": [
      "pnpm --filter backend exec eslint --fix"
    ],
    "apps/frontend/**/*.{js,ts,tsx}": [
      "pnpm --filter frontend exec eslint --fix"
    ],
    "apps/blog/**/*.{js,ts,tsx}": [
      "pnpm --filter blog exec eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,tsx}": [
      "pnpm --filter @zcat/ui exec eslint --fix"
    ],
    "packages/doc/**/*.{js,ts,tsx}": [
      "pnpm --filter doc exec eslint --fix"
    ],
    "!(apps|packages)/**/*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  }
}