    "dev:frontend": "pnpm --filter=frontend run dev",
    "dev:blog": "pnpm --filter=blog run dev",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" \"pnpm run dev:blog\"",
    "build:backend": "pnpm --filter=backend run build",
    "build:frontend": "pnpm --filter=frontend run build",
    "build:blog": "pnpm --filter=blog run build",
    "build": "pnpm -r run build",
    "docker:build:db": "docker compose up -d --build cms_pg",
    "docker:build:backend": "docker compose up -d --build backend",
    "docker:build:frontend": "docker compose up -d --build frontend",
    "docker:build:blog": "docker compose up -d --build blog",
    "docker:build": "docker compose up -d --build"
  },
