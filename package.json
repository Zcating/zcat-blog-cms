{
  "name": "zcat-blog-cms",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev:backend": "pnpm run -C --filter=backend dev",
    "dev:frontend": "pnpm run -C --filter=frontend dev",
    "dev:blog": "pnpm run -C --filter=blog dev",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" \"pnpm run dev:blog\"",
    "build:backend": "pnpm run --filter=backend build",
    "build:frontend": "pnpm run --filter=frontend build",
    "build:blog": "pnpm run --filter=blog build",
    "build": "concurrently \"pnpm run build:backend\" \"pnpm run build:frontend\" \"pnpm run build:blog\"",
    "deploy:backend": "pnpm run -C packages/backend start",
    "db:deploy:dev": "pnpm run -C packages/backend db:deploy:dev",
    "db:deploy:prod": "pnpm run -C packages/backend db:deploy:prod",
    "docker:build:db": "docker compose -f docker-compose.yml up -d --build cms_pg",
    "docker:build:backend": "docker compose -f docker-compose.yml up -d --build backend",
    "docker:build:frontend": "docker compose -f docker-compose.yml up -d --build frontend",
    "docker:build:blog": "docker compose -f docker-compose.yml up -d --build blog",
    "docker:build": "docker compose -f docker-compose.yml up -d --build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.12.2",
  "devDependencies": {
    "@types/react-syntax-highlighter": "^15.5.13",
    "concurrently": "^9.1.2",
    "eslint-import-resolver-typescript": "^4.4.3",
    "eslint-plugin-import": "^2.31.0",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "katex": "^0.16.23",
    "react-markdown": "^9.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=22.4.0",
    "pnpm": ">=10.15.1",
    "npm": ">=10.9.2"
  }
}
